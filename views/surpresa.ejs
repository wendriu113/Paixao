    <script>
      const layer = document.getElementById("hearts-layer");
      const HEARTS = 20;

      function addHeart(id) {
        const heart = document.createElement("div");
        heart.className = "fall-heart";
        const size = 15 + Math.random() * 20;
        heart.style.setProperty("--x", `${Math.random() * 100}%`);
        heart.style.setProperty("--duration", `${8 + Math.random() * 6}s`);
        heart.style.setProperty("--delay", `${Math.random() * 3}s`);
        heart.style.setProperty(
          "--scale",
          (0.7 + Math.random() * 0.6).toFixed(2)
        );
        heart.style.setProperty(
          "--opacity",
          (0.35 + Math.random() * 0.4).toFixed(2)
        );
        heart.innerHTML = `
					<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="${size}" height="${size}">
						<path d="M12 21s-6.4-4.35-9.2-8.53C.5 9.6 1.28 6.2 3.76 4.42 6.24 2.64 9.2 3.5 12 6.25 14.8 3.5 17.76 2.64 20.24 4.42c2.48 1.78 3.26 5.18.96 8.05C18.4 16.65 12 21 12 21Z" />
					</svg>
				`;
        layer.appendChild(heart);
      }

      for (let i = 0; i < HEARTS; i += 1) {
        addHeart(i);
      }
    </script>
